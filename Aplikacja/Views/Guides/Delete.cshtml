@model Aplikacja.Models.Guide
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<p>
    Czy na pewno chcesz usunąć ten poradnik ?
</p>
<ul>
    <li>Tytuł: @Model.Title</li>
    <li>Treść: @Model.Body</li>
    <li>Kategoria: @Model.Category</li>
</ul>

@using (Html.BeginForm("GuideDelete", "Guides", FormMethod.Post))
{

    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-danger" value="Tak" />
    @Html.ActionLink("Nie", "Index")
}