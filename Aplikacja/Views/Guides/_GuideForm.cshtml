@model Aplikacja.Models.Guide


<!--Pola formularza służące do przesłania danych przy tworzeniu poradnika-->

<div class="form-group">
    <label>Tytuł</label>
    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
</div>

<div class="form-group">
    <label>Fotografia</label>
    @Html.TextBoxFor(m => m.Filename, new { type = "file" })
</div>

<div class="form-group">
    <label>Treść</label>
    @Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows = 4 })
</div>

<div class="form-group">
    <label>Kategoria</label>
    @Html.EnumDropDownListFor(m => m.Category, new { @class = "form-control" })
</div>

@Html.HiddenFor(m => m.Id)
<input type="submit" class="btn btn-primary" value="Zapisz zmiany" />
